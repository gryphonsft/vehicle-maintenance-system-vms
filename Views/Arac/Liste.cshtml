@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Araç Listele";
}
@model IEnumerable<AspProject1.Models.Araclar>

@if (ViewData["SonucYok"] != null)
{
    <div class="alert alert-warning">
        @ViewData["SonucYok"]<br>
        
       <a href="@Url.Action("Liste", "Arac")" class="">Listeye geri dön.</a>

    </div>
}
@if (Model != null && Model.Any())
{
<div class="bg-dark rounded-3xl gap-2 p-2 mb-0">

    <table class="table table-striped table-bordered table-hover ">
        <thead>
            <tr class="text-white">
                <th>Kayıt Numarası <i class="fa-solid fa-id-card"></i></th>
                <th>Araç Plakası <i class="fa-solid fa-hashtag"></i></th>
                <th>Marka <i class="fa-solid fa-tag"></i></th>
                <th>Model <i class="fa-solid fa-car-side"></i></th>
                <th>Araç Yılı <i class="fa-solid fa-calendar"></i></th>
                <th>Bakım Notu</th>
                <th>Müşteri Adı <i class="fa-solid fa-person"></i></th>
                <th>Müşteri Telefonu <i class="fa-solid fa-phone"></i></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var arac in Model)
            {
                <tr class="text-white">
                    <td>@arac.AracID</td>
                    <td>@arac.Plaka</td>
                    <td>@arac.Marka</td>
                    <td>@arac.Model</td>
                    <td>@arac.Yil</td>
                    <td>@arac.BakimNotu</td>
                    <td>@arac.MusteriAdi</td>
                    <td>@arac.Telefon</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mb-3 d-flex justify-content-start align-items-center gap-3 text-white">

        <form asp-controller="Arac" asp-action="Silme" method="post" class="d-flex align-items-center">
            <label for="AracID" class="me-2 fw-bold">Silinecek Araç ID:</label>
            <input type="number" name="AracID" id="AracID" class="form-control w-50 me-2" required />
            <button type="submit" class="btn btn-danger">Sil</button>
        </form>


        <form asp-controller="Arac" asp-action="Search" method="get" class="d-flex align-items-center">
            <div class="input-group">
                <input type="text" name="searchString" class="form-control" placeholder="Araç ara..."required
                    value="@ViewData["SearchString"]">
                <button type="submit" class="btn btn-primary bg-indigo-600">
                    <i class="fa fa-search"></i> Ara
                </button>
            </div>
        </form>



        <a href="@Url.Action("Liste", "Arac")" class="btn btn-primary bg-indigo-600">
            <i class="fa-solid fa-arrows-rotate"></i> Sayfayı yenile   
        </a>
    <a href="@Url.Action("Main", "Home")" class="btn btn-primary bg-indigo-600">Geri dön</a>
    </div>
</div>

}

