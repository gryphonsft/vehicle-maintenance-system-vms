@{
    ViewData["Title"] = "Ana Ekran";
}
<div class="flex flex-wrap lg:flex-nowrap gap-4 mt-5">
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 flex-grow">
        <div class="bg-blue-500 text-white p-5 rounded-lg shadow-lg">
            <h2 class="text-xl font-bold">Toplam Araç</h2>
            <p id="ToplamAraclarim" class="text-3xl font-semibold">@ViewBag.ToplamAraclarim</p>
        </div>
        <div class="bg-yellow-500 text-white p-5 rounded-lg shadow-lg">
            <h2 class="text-xl font-bold">Bakım Sayısı</h2>
            <p id="BakimTuruSayisi" class="text-3xl font-semibold">@ViewBag.BakimTuruSayisi</p>
        </div>
        <div class="bg-green-500 text-white p-5 rounded-lg shadow-lg">
            <h2 class="text-xl font-bold">Tamamlanan Bakım</h2>
            <p id="TamamlananBakim" class="text-3xl font-semibold">@ViewBag.TamamlananBakim</p>
        </div>
    </div>

   
    <div class="flex justify-center items-center w-1/3 max-w-xs">
        <canvas id="vehicleChart"></canvas>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script id="chartData" type="application/json">
    @Html.Raw(Json.Serialize(new[] {
        ViewBag.ToplamAraclarim ?? 0,
        ViewBag.BakimTuruSayisi ?? 0,
        ViewBag.TamamlananBakim ?? 0
    }))
</script>
<canvas id="vehicleChart"></canvas>
<script src="~/js/chart.js"></script>
