@model AspProject1.Models.BakimFiyatlari
@{
}
<div class=" rounded-3xl gap-2 p-2 mb-4 text-white mt-20" style="background-color: #676868; width:400px; height:300px;">
<div class="text-center">
    <h1>Bakım ekleme</h1>
   
</div>
<form asp-action="BakimEkle" method="post">
    <div class="font-bold">
        <div class="form-group ">
            <label class="control-label">Bakım adı</label>
            <input asp-for="BakimAdi" class="form-control" required/>
            <span asp-validation-for="BakimAdi" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label  class="control-label">Ücret</label>
            <input asp-for="Ucret" class="form-control" required/>
            <span asp-validation-for="Ucret" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label  class="control-label">Açıklama</label>
            <input asp-for="Aciklama" class="form-control" required/>
            <span asp-validation-for="Aciklama" class="text-danger"></span>
        </div>
        
    </div>
   <div class="flex justify-center mt-4">
    <button type="submit" class="btn btn-primary bg-blue-500 px-6 py-2 rounded-3xl">Kaydet</button>
     <a href="@Url.Action("Bakim", "Bakim")" class="btn btn-primary bg-blue-500 rounded-3xl">Geri dön</a>
    </div>

</form>
