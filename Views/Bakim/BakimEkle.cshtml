@model AspProject1.Models.BakimFiyatlari
@{
}
<div class=" rounded-3xl gap-2 p-2 mb-0 text-white mt-80" style="background-color: #333333;">
<div class="text-center">
    <h1>Bakim ekleme ekranına hos geldiniz</h1>
   
</div>
<form asp-action="BakimEkle" method="post">
    <div class="font-bold">
        <div class="form-group ">
            <label asp-for="BakimAdi" class="control-label"></label>
            <input asp-for="BakimAdi" class="form-control" required/>
            <span asp-validation-for="BakimAdi" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Ucret" class="control-label"></label>
            <input asp-for="Ucret" class="form-control" required/>
            <span asp-validation-for="Ucret" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Aciklama" class="control-label"></label>
            <input asp-for="Aciklama" class="form-control" required/>
            <span asp-validation-for="Aciklama" class="text-danger"></span>
        </div>
        
    </div>
   <div class="flex justify-center mt-4">
    <button type="submit" class="btn btn-primary bg-indigo-600 px-6 py-2 rounded-lg">Kaydet</button>
     <a href="@Url.Action("Bakim", "Bakim")" class="btn btn-primary bg-indigo-600">Geri dön</a>
    </div>

</form>
