<div class="rounded-3xl gap-2 p-2 mb-0 text-white mt-10 mx-auto" style="background-color: #676868; max-width: 800px;">
    <table class="table table-striped text-white">
        <thead>
            <tr>
                <th>Bakım Adı</th>
                <th>Ücret</th>
                <th>Açıklama</th>
                <th>İşlem</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var bakim in Model)
            {
                <tr>
                    <td>@bakim.BakimAdi</td>
                    <td>@bakim.Ucret.ToString("C")</td>
                    <td>@bakim.Aciklama</td>
                    <td>
                        <form asp-action="BakimSil" asp-controller="Bakim" method="post" style="display:inline;">
                            <input type="hidden" name="BakimID" value="@bakim.BakimID" />
                            <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

  
    <div class="flex flex-wrap justify-center gap-4 mt-4">
        <a href="@Url.Action("BakimEkle", "Bakim")" class="btn btn-primary bg-blue-500 rounded-3xl px-4 py-2 min-w-[150px] text-white">Bakım Ekleme ekranına git</a>
        <a href="@Url.Action("Main", "Home")" class="btn btn-primary bg-blue-500 rounded-3xl px-4 py-2 min-w-[150px] text-white">Geri dön</a>
    </div>
</div>
