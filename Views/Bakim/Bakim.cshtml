@model List<AspProject1.Models.BakimFiyatlari>

@{
    ViewData["Title"] = "Bakım Fiyatları";
}


<br>
<div class="bg-dark rounded-3xl gap-2 p-2 mb-0 text-white">
<table class="table table-striped">
    <thead>
        <tr class="text-white">
            <th>Bakım Adı</th>
            <th>Ücret</th>
            <th>Açıklama</th>
            <th>İşlem</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var bakim in Model)
        {
            <tr class="text-white">
                <td>@bakim.BakimAdi</td>
                <td>@bakim.Ucret.ToString("C")</td>
                <td>@bakim.Aciklama</td>
                <td>
                    <form asp-action="BakimSil" asp-controller="Bakim" method="post" style="display:inline;">
                        <input type="hidden" name="BakimID" value="@bakim.BakimID" />
                        <button type="submit" class="btn btn-danger btn-sm ">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-center">
    <a href="@Url.Action("BakimEkle", "Bakim")" class="btn btn-primary bg-indigo-600">Bakım Ekleme ekranına git</a>


    <a href="@Url.Action("Main", "Home")" class="btn btn-primary bg-indigo-600">Geri dön</a>
</div>
</div>
