<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AraçBakımSistemi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/AspProject1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/tailwindcss/tailwind.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css">

    <style>
        body{
            background-color: #ffffff;
        }
        .navbar-nav .nav-item:hover .nav-link {
            background-color: #adb5bd;
            transition: background-color 0.3s ease;
            border-radius: 10px;
        }
        
        /* Sayfa tam görünür olacak şekilde kutunun boyutunu ayarla */
        .bg-dark {
            min-height: auto !important;
            height: auto !important;
            overflow: hidden;
        }
        
        /* Main kısmının gereksiz büyümesini engelle */
        .main-container {
            min-height: calc(100vh - 120px); /* Header ve Footer'ı çıkarttık */
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        /* Footer sabit kalacak şekilde hizala */
        .footer {
            position: relative;
            width: 100%;
            text-align: center;
            padding: 10px 0;
        }
    </style>
</head>
<body class="flex flex-col min-h-screen ">
   <header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3" style="background-color: #333333;">
        <div class="container-fluid d-flex justify-content-center align-items-center">
            <a class="navbar-brand text-white text-3xl" asp-area="" asp-controller="Home" asp-action="Main">
                <i class="fa-solid fa-gears"></i> AraçBakımSistemi
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>
</header>

    <div class="main-container">
        <main class="p-4 w-full max-w-5xl mx-auto">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; AraçBakımSistemi - <a asp-area="" asp-controller="Home" asp-action="About">ABOUT ME</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Sayfa açıldığında scroll'u yukarı al
        window.onload = function() {
            document.documentElement.scrollTop = 0;
        };
    </script>
</body>
</html>
